#!/bin/bash
# Aerospace focus next with cross-monitor wrapping

# Try to focus next window in current workspace
if ! /opt/homebrew/bin/aerospace focus --boundaries workspace --boundaries-action wrap-around-the-workspace dfs-next 2>/dev/null; then
    # If at boundary, move to next monitor and focus first window
    /opt/homebrew/bin/aerospace focus-monitor --wrap-around next
fi
